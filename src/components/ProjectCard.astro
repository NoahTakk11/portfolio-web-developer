---
interface Props {
  title: string;
  description: string;
  technologies: string;
  url: string;
}

const { title, description, technologies, url } = Astro.props;
---

<div>
  <a
    href={url}
    target="_blank"
    class="flex flex-col w-60 h-80 items-center bg-[#19305a] border border-[#61d7dc] rounded-xl hover:scale-105 hover:border-[#f53b57] relative"
  >
    <div class="flex flex-col justify-between p-4 leading-normal">
      <h5 class="mb-2 text-2xl font-bold tracking-tight text-white">
        {title}
      </h5>
      <p class="mb-3 font-normal text-[#A9A9A9]">
        {description}
      </p>
    </div>
    <div
      class="p-4 leading-normal absolute bottom-0 border-t-[1px] border-[#A9A9A9]"
    >
      <p class="text-sm w-full text-center text-slate-50 font-medium mb-0">
        {technologies}
      </p>
    </div>
  </a>
</div>
